---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import Footer from '../components/astro/Footer.astro';
import { organizationStructuredData, localBusinessStructuredData } from '../utils/seo';
import { brusselsCommunes, brusselsQuartiers } from '../data/brusselsLocal';
import { internalLinkAnchors } from '../data/seoKeywords';
import { blogPosts as blogPostsData } from '../data/blogData';

const breadcrumbData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [{ '@type': 'ListItem', position: 1, name: 'Accueil', item: 'https://location-bus.be/' }]
};

const serviceData = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  serviceType: 'Location d\'Autocar avec Chauffeur',
  provider: { '@type': 'Organization', name: 'Location Bus Belgique', telephone: '+32-2-342-07-34', address: { '@type': 'PostalAddress', streetAddress: 'Avenue Herrmann Debroux 54', addressLocality: 'Brussels', postalCode: '1160', addressCountry: 'BE' } },
  areaServed: { '@type': 'Country', name: 'Belgium' },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Services de Transport',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Transferts Aéroport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Transport d\'Entreprise' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Autocar Événementiel' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Excursions Touristiques' } }
    ]
  }
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    { '@type': 'Question', name: 'Combien coûte une location d\'autocar avec chauffeur à Bruxelles ?', acceptedAnswer: { '@type': 'Answer', text: 'Le tarif dépend du type de véhicule (minibus 19 places, bus 50 places ou autocar 60 places), de la durée et du trajet. Nous proposons un devis gratuit, sans engagement, sous 48h. Contactez-nous pour une estimation personnalisée.' } },
    { '@type': 'Question', name: 'Quel est le prix d\'un minibus avec chauffeur à Bruxelles ?', acceptedAnswer: { '@type': 'Answer', text: 'Nos minibus 19 places sont proposés à partir de tarifs compétitifs, variables selon la prestation. Demandez votre devis gratuit et sans engagement : nous vous répondons sous 48h avec une offre sur-mesure.' } },
    { '@type': 'Question', name: 'Les devis sont-ils gratuits et sans engagement ?', acceptedAnswer: { '@type': 'Answer', text: 'Oui. Tous nos devis sont 100 % gratuits et sans engagement. Vous recevez une proposition personnalisée sous 48h maximum. Aucune obligation de réservation.' } },
    { '@type': 'Question', name: 'Quels délais pour obtenir un devis de transport de groupe ?', acceptedAnswer: { '@type': 'Answer', text: 'Nous nous engageons à vous répondre sous 48h ouvrées. Pour les demandes urgentes, contactez-nous au +32 2 342 07 34 : notre équipe traite les demandes en priorité.' } },
    { '@type': 'Question', name: 'Quel budget prévoir pour un transport événementiel à Bruxelles ?', acceptedAnswer: { '@type': 'Answer', text: 'Le budget varie selon le véhicule, la distance et les options (chauffeur-guide, équipements). Nous proposons des formules transparentes et adaptées : mariages, séminaires, écoles, événements corporate. Devis gratuit sous 48h.' } },
    { '@type': 'Question', name: 'Votre flotte est-elle conforme à la LEZ Bruxelles ?', acceptedAnswer: { '@type': 'Answer', text: 'Oui. 100 % de notre flotte respecte les normes Euro 6 et est conforme à la zone basses émissions (LEZ) de Bruxelles. Circulation libre dans toute la Région.' } }
  ]
};

const structuredData = [organizationStructuredData, localBusinessStructuredData, breadcrumbData, serviceData, faqSchema];
const publishedPosts = blogPostsData.filter(p => p.is_published).slice(0, 5);
const communesSample = ['Bruxelles-Ville', 'Ixelles', 'Uccle', 'Schaerbeek', 'Etterbeek', 'Woluwe-Saint-Lambert'].join(', ');
const communesList = brusselsCommunes.slice(0, 10).join(', ');
const quartiersList = brusselsQuartiers.slice(0, 5).join(', ');
---

<BaseLayout
  title="Location Autocar Bruxelles | Bus Luxe & Transport Groupe"
  description="Location autocar avec chauffeur Bruxelles. Autocar haut de gamme pour transport de groupe, entreprises, événements et écoles. Devis gratuit sans engagement sous 48h."
  canonical="https://location-bus.be/"
  ogType="website"
  ogImage="https://ik.imagekit.io/by733ltn6/location-bus/slider4-1-1024x683-1.jpg?updatedAt=1757936830002"
  keywords={['location bus Bruxelles', 'location autocar avec chauffeur Bruxelles', 'autocar haut de gamme Bruxelles', 'transport de groupe Bruxelles', 'autocar événementiel Bruxelles', 'devis bus gratuit', 'transport entreprise Bruxelles']}
  structuredData={structuredData}
>
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-20" tabindex="-1">
    <article>
      <!-- Hero -->
      <header class="relative min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 flex items-center overflow-hidden">
        <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-30" style="background-image: url('https://ik.imagekit.io/by733ltn6/location-bus/slider4-1-1024x683-1.jpg?updatedAt=1757936830002')"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/20 to-gray-900/10"></div>
        <div class="container mx-auto px-4 relative z-10">
          <div class="text-center">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold text-white mb-6 leading-tight">
              Location Autocar avec Chauffeur <span class="block text-teal-400">Bruxelles</span>
