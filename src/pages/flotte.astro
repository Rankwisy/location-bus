---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import Footer from '../components/astro/Footer.astro';
import { getPageKeywords } from '../data/seoKeywords';

const breadcrumbData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Accueil', item: 'https://location-bus.be/' },
    { '@type': 'ListItem', position: 2, name: 'Flotte', item: 'https://location-bus.be/flotte' }
  ]
};
---

<BaseLayout
  title="Flotte Minibus & Bus Bruxelles | Location avec Chauffeur"
  description="Découvrez notre flotte de minibus 19 places, bus 50 places et autocars 60 places. Véhicules Euro 6 conformes LEZ Bruxelles. Devis gratuit."
  canonical="https://location-bus.be/flotte"
  keywords={getPageKeywords('/flotte', ['flotte'])}
  structuredData={breadcrumbData}
>
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-24" tabindex="-1">
    <article class="container mx-auto px-4 py-16">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-8">Notre Flotte Minibus et Bus Bruxelles</h1>
      <p class="text-xl text-gray-600 mb-12">Minibus 19 places, bus 50 places, autocars 60 places. Flotte Euro 6 conforme LEZ.</p>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="https://ik.imagekit.io/by733ltn6/location-bus/sp6.jpg" alt="Minibus 19 places" class="w-full h-48 object-cover" width="400" height="192" loading="lazy" />
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-3">Minibus 19 Places</h2>
            <p class="text-gray-600 mb-4">Climatisation, sièges inclinables, ceintures de sécurité.</p>
            <a href="/contactez-nous" class="text-teal-600 font-semibold hover:underline">Demander un devis</a>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="https://ik.imagekit.io/by733ltn6/location-bus/70.png" alt="Bus 50 places" class="w-full h-48 object-cover" width="400" height="192" loading="lazy" />
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-3">Bus 50 Places</h2>
            <p class="text-gray-600 mb-4">Prises USB, micro, frigo, machine à café.</p>
            <a href="/contactez-nous" class="text-teal-600 font-semibold hover:underline">Demander un devis</a>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="https://ik.imagekit.io/by733ltn6/location-bus/volvo-bus.png" alt="Autocar 60 places" class="w-full h-48 object-cover" width="400" height="192" loading="lazy" />
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-3">Autocar 60 Places</h2>
            <p class="text-gray-600 mb-4">Équipement premium, grand confort, tous services inclus.</p>
            <a href="/contactez-nous" class="text-teal-600 font-semibold hover:underline">Demander un devis</a>
          </div>
        </div>
      </div>
      <p class="mt-12"><a href="/contactez-nous" class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-3 rounded-lg font-semibold inline-block">Demander un devis personnalisé</a></p>
    </article>
  </main>
  <Footer />
</BaseLayout>
