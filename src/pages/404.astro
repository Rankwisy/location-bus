---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import Footer from '../components/astro/Footer.astro';
---

<BaseLayout
  title="Page non trouvée | Location Bus Belgique"
  description="La page demandée n'existe pas. Retour à l'accueil Location Bus Belgique."
  noindex={true}
>
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-24" tabindex="-1">
    <article class="container mx-auto px-4 py-24 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">404 — Page non trouvée</h1>
      <p class="text-xl text-gray-600 mb-8">La page que vous recherchez n'existe pas ou a été déplacée.</p>
      <a href="/" class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-3 rounded-lg font-semibold inline-block">Retour à l'accueil</a>
    </article>
  </main>
  <Footer />
</BaseLayout>
