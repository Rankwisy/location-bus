---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import Footer from '../components/astro/Footer.astro';
import { organizationStructuredData } from '../utils/seo';
import { getPageKeywords } from '../data/seoKeywords';

const breadcrumbData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Accueil', item: 'https://location-bus.be/' },
    { '@type': 'ListItem', position: 2, name: 'Services', item: 'https://location-bus.be/services' }
  ]
};
const structuredData = [organizationStructuredData, breadcrumbData];
---

<BaseLayout
  title="Services Transport Bus Bruxelles | Transferts Aéroport & Entreprise"
  description="Location de bus et minibus avec chauffeur à Bruxelles. Transferts aéroport Zaventem et Charleroi, transport entreprise, excursions touristiques. Devis gratuit sous 24h."
  canonical="https://location-bus.be/services"
  keywords={getPageKeywords('/services', ['transfert', 'entreprise', 'excursion'])}
  structuredData={structuredData}
>
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-24" tabindex="-1">
    <article class="container mx-auto px-4 py-16">
      <header class="mb-12">
        <nav aria-label="Fil d'Ariane">
          <ol class="flex text-sm text-gray-600 mb-4">
            <li><a href="/" class="hover:text-teal-600">Accueil</a></li>
            <li class="mx-2">/</li>
            <li class="text-gray-900 font-medium">Services</li>
          </ol>
        </nav>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Services Transport Bus Bruxelles : Transferts & Entreprise
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl">
          Location de bus avec chauffeur professionnel pour transferts aéroport, voyages d'entreprise et excursions touristiques. Service premium à Bruxelles.
        </p>
      </header>
      <section class="prose prose-lg max-w-none">
        <h2>Transferts Aéroport Bruxelles</h2>
        <p>Service de transfert professionnel vers l'aéroport de Zaventem et Charleroi. Prise en charge et retour garantis.</p>
        <h2>Transport d'Entreprise</h2>
        <p>Solutions pour séminaires, conférences et déplacements professionnels. Flotte moderne et chauffeurs expérimentés.</p>
        <h2>Excursions Touristiques</h2>
        <p>Circuits personnalisés en Belgique et en Europe. Bruges, Gand, Amsterdam et plus encore.</p>
        <p class="mt-8"><a href="/contactez-nous" class="bg-teal-500 hover:bg-teal-600 text-white px-6 py-3 rounded-lg font-semibold inline-block">Demander un devis gratuit</a></p>
      </section>
    </article>
  </main>
  <Footer />
</BaseLayout>
