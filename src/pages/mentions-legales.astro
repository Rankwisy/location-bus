---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import Footer from '../components/astro/Footer.astro';
---

<BaseLayout
  title="Mentions Légales | Location Bus Belgique"
  description="Mentions légales de Location Bus Belgique. Informations sur l'éditeur du site, hébergement et propriété intellectuelle."
  canonical="https://location-bus.be/mentions-legales"
>
  <Header />
  <main id="main-content" class="min-h-screen bg-white pt-24" tabindex="-1">
    <article class="container mx-auto px-4 py-16 max-w-3xl">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Mentions Légales</h1>
      <section>
        <h2 class="text-xl font-bold text-gray-900 mb-4">Éditeur du site</h2>
        <p class="text-gray-600 mb-4">Location Bus Belgique SPRL — Avenue Herrmann Debroux 54, 1160 Brussels, Belgique.</p>
        <p class="text-gray-600 mb-8">Téléphone : +32 2 342 07 34 — Email : info@location-bus.be</p>
      </section>
    </article>
  </main>
  <Footer />
</BaseLayout>
