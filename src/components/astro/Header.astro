---
const navigation = [
  { name: 'Accueil', href: '/', title: 'Location bus et minibus avec chauffeur à Bruxelles' },
  { name: 'Services', href: '/services', title: 'Services transport bus Bruxelles' },
  { name: 'Flotte', href: '/flotte', title: 'Minibus et bus avec chauffeur' },
  { name: 'LEZ', href: '/lez-bruxelles', badge: true, title: 'Normes LEZ Bruxelles 2026' },
  { name: 'Excursions', href: '/excursions', title: 'Excursions touristiques en bus Belgique et Europe' },
  { name: 'À Propos', href: '/qui-sommes-nous', title: 'Qui sommes-nous : expertise transport Bruxelles' },
  { name: 'Contact', href: '/contactez-nous', title: 'Demander un devis personnalisé gratuit' },
  { name: 'Blog', href: '/blog', title: 'Blog et conseils transport' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => currentPath === href || (href !== '/' && currentPath.startsWith(href));
---

<header class="fixed top-0 w-full z-50 transition-all duration-300 bg-white/95 backdrop-blur-sm py-2" id="site-header">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between gap-4">
      <a href="/" class="flex-shrink-0">
        <img
          src="https://ik.imagekit.io/by733ltn6/location-bus/cropped-Logo-Location_bus-1.png?updatedAt=1757933964171"
          alt="Location Bus Belgique - Logo officiel service transport bus avec chauffeur à Bruxelles"
          class="h-10 sm:h-11 md:h-12 transition-all duration-300 logo-img"
        />
      </a>

      <nav class="hidden lg:flex items-center gap-x-4 xl:gap-x-5 flex-shrink-0" aria-label="Navigation principale">
        {navigation.map((item) => (
          <a
            href={item.href}
            title={'title' in item ? item.title : undefined}
            class:list={[
              'text-sm font-medium transition-colors duration-200 hover:text-teal-600 whitespace-nowrap',
              isActive(item.href) ? 'text-teal-600 border-b-2 border-teal-600' : 'text-gray-900',
              item.badge && 'bg-green-100 px-2 py-0.5 rounded-full text-green-800 hover:bg-green-200 hover:text-green-900 text-xs flex items-center'
            ]}
          >
            {item.badge && (
              <svg class="inline mr-1 w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            )}
            {item.name}
          </a>
        ))}
      </nav>

      <div class="hidden md:flex items-center gap-x-3 flex-shrink-0">
        <a href="mailto:info@location-bus.be" class="flex items-center text-gray-800 hover:text-teal-600 transition-colors">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
          <span class="text-xs font-semibold">info@location-bus.be</span>
        </a>
        <a href="tel:+3223420734" class="flex items-center bg-teal-400 hover:bg-teal-500 text-gray-900 px-3 py-1.5 rounded-lg text-sm font-semibold transition-all duration-200 transform hover:scale-105">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
          +32 2 342 07 34
        </a>
      </div>

      <button
        type="button"
        class="lg:hidden p-3 rounded-lg hover:bg-gray-100 transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center"
        aria-label="Ouvrir le menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        id="menu-toggle"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 right-0 bg-white shadow-lg border-t max-h-[calc(100vh-80px)] overflow-y-auto" aria-hidden="true">
      <nav class="py-4" aria-label="Navigation mobile">
        {navigation.map((item) => (
          <a
            href={item.href}
            title={'title' in item ? item.title : undefined}
            class:list={[
              'block px-4 py-4 font-medium transition-colors hover:bg-gray-50 hover:text-teal-600 min-h-[44px] flex items-center mobile-nav-link',
              isActive(item.href) ? 'text-teal-600 bg-gray-50' : 'text-gray-900',
              item.badge && 'bg-green-50'
            ]}
          >
            {item.badge && <span class="text-green-600 mr-2">•</span>}
            <span class:list={[item.badge && 'text-green-700 font-semibold']}>{item.name}</span>
          </a>
        ))}
        <div class="px-4 py-4 border-t mt-4">
          <a href="tel:+3223420734" class="flex items-center justify-center bg-teal-400 hover:bg-teal-500 text-gray-900 px-6 py-4 rounded-lg font-semibold transition-colors w-full min-h-[48px]">
            +32 2 342 07 34
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  (function() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const iconOpen = document.getElementById('menu-icon-open');
    const iconClose = document.getElementById('menu-icon-close');
    const links = document.querySelectorAll('.mobile-nav-link');

    if (!toggle || !menu || !iconOpen || !iconClose) return;

    function openMenu() {
      menu?.classList.remove('hidden');
      menu?.setAttribute('aria-hidden', 'false');
      toggle?.setAttribute('aria-expanded', 'true');
      toggle?.setAttribute('aria-label', 'Fermer le menu');
      iconOpen?.classList.add('hidden');
      iconClose?.classList.remove('hidden');
    }

    function closeMenu() {
      menu?.classList.add('hidden');
      menu?.setAttribute('aria-hidden', 'true');
      toggle?.setAttribute('aria-expanded', 'false');
      toggle?.setAttribute('aria-label', 'Ouvrir le menu');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    }

    toggle?.addEventListener('click', () => {
      const isOpen = menu?.classList.contains('hidden');
      if (isOpen) openMenu();
      else closeMenu();
    });

    links?.forEach(link => link.addEventListener('click', closeMenu));

    // Scroll behavior for header
    const siteHeader = document.getElementById('site-header');
    const logoImg = document.querySelector('.logo-img');
    if (siteHeader && logoImg) {
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            const scrolled = window.scrollY > 50;
            siteHeader.classList.toggle('shadow-lg', scrolled);
            siteHeader.classList.toggle('py-1.5', scrolled);
            siteHeader.classList.toggle('py-2', !scrolled);
            logoImg.classList.toggle('!h-9', scrolled);
            logoImg.classList.toggle('!sm:h-10', scrolled);
            ticking = false;
          });
          ticking = true;
        }
      });
    }
  })();
</script>
